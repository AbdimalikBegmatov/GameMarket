@model Order
@{
    Layout = "~/Views/Store/_Layout.cshtml";
}

<h2 class="m-3">Общая иформация</h2>

<form asp-action="CreateOrder" method="post" class="m-4">
    <div class="row-cols-2">
        <label class="col">Ваше имя:</label>
        <input asp-for="CustumerName" class="col form-control" />
    </div>
    <div class="row-cols-2">
        <label class="col">Ваш адрес:</label>
        <input asp-for="Address" class="col form-control" />
    </div>
    <div class="row-cols-2">
        <label class="col">Ваша область</label>
        <input asp-for="State" class="col form-control" />
    </div>
    <div class="row-cols-2">
        <label class="col">Ваш почтовой индекс</label>
        <input asp-for="ZipCode" class="col form-control" />
    </div>
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Оформить заказ</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>

</form>