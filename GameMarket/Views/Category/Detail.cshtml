@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewData["Title"] = ViewBag.Title;
}

@model Category

<div>

    <h4 class="text-center m-4">@ViewBag.Title</h4>

    <div class="row">
         <div class="row m-1 justify-content-center">
            <label class="col-sm-3 col-form-label-sm">Id</label>
            <div class="col-sm-6">
                <input class="form-control" asp-for="Id" readonly />
            </div>
        </div> 
        <div class="row m-1 justify-content-center">
            <label class="col-sm-3 col-form-label-sm">Название</label>
            <div class="col-sm-6">
                <input class="form-control" asp-for="Name" readonly />
            </div>
        </div>
        <div class="row m-1 justify-content-center">
            <label class="col-sm-3 col-form-label-sm">Описание</label>
            <div class="col-sm-6">
                <textarea class="form-control" asp-for="Description" readonly></textarea>
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="col-2 btn btn-primary btn-sm m-1">Редактировать</a>
            <a asp-action="Index" class="col-2 btn btn-primary btn-sm m-1">Назад</a>
            <div class="col-3">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>