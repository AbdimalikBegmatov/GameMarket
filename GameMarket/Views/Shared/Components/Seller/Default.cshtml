
@model IEnumerable<Product>

<div class="row">
    @foreach (Product product in Model)
    {
        <div class="col-sm-4">
            <div class="card w-50 m-1">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-truncate">@product.Description</p>
                    <p>$@product.RetailPrice</p>
                    <form id="@product.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
                        <input type="hidden" asp-for="@product.Id" />
                        <input type="hidden" asp-for="@product.Name" />
                        <input type="hidden" asp-for="@product.RetailPrice" />
                        <span class="card-text p-1">
                            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">Добавить в корзину</button>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
