@{
    ViewBag.Seaches = new string[] { "Name", "Category.Name" };
    ViewBag.Sort = new string[] { "Name", "Category.Name", "PurchasePrice", "RetailPrice" };
}
<div class="row justify-content-end m-2">
    <label class="col-1">Поиск</label>
    <div class="col-3">
        <select form="pageform" name="option.SearchPropertyName" class="form-select">
            @foreach (string s in ViewBag.Seaches)
            {
                <option value="@s" selected="@(Model.Options.SearchPropertyName == s)">
                    @(s.IndexOf('.') == -1 ? s : s.Substring(0, s.IndexOf('.')))
                </option>
            }
        </select>
    </div>
    <div class="col-3">
        <input form="pageform" class="form-control" name="option.SearchTerm" value="@Model.Options.SearchTerm" />
    </div>
    <button form="pageform" class="col-1 btn btn-secondary btn-sm">Поиск</button>
</div>


<div class="row justify-content-end m-2">
    <label class="col-1 form-label">Сортировка</label>
    <div class="col-3">
        <select class="form-select" form="pageform" name="order.OrderPropertyName">
            @foreach (string sort in ViewBag.Sort)
            {
                <option value="@sort" selected="@(Model.Options.OrderPropertyName == sort)">
                    @(sort.IndexOf('.') == -1 ? sort : sort.Substring(0, sort.IndexOf('.')))
                </option>
            }
        </select>
    </div>
    <div class="col-3">
        <input form="pageform" type="checkbox" name="option.DescendingOrder" id="options.DescendingOrder" class="form-check-input"
               value="true" checked="@Model.Options.DescendingOrder" />
        <label class="form-check-label">Сортировка по убыванию</label>
    </div>
    <div class="col-1 text-right">
        <button form="pageform" class="btn btn-secondary" type="submit">Сортировка</button>
    </div>
</div>